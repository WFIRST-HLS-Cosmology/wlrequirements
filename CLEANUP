#!/usr/bin/perl

# Removes executables and outputs that will be re-generated by the scripts
# May contain special characters, e.g. *
@files_to_remove = (
  'matrinv.x',
  'wfirst-req.ini',
  'sens.temp',
  'PSF_P1G1/coefficients_*.dat',
  'scr/*'
);
#
# The -i flag is used here for safety!
for $file (@files_to_remove) {
  system "rm -i $file";
}
